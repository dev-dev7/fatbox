{% include 'page-testimonial' %}

{% schema %}

{
  "name": "Testimonials",
  "class": "testimonials jsTestimonials",
"settings": [

  {
          "type": "color",
          "id": "bg",
          "label": "BG Color",
          "default": "#ffffff"
        },
  {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
     
    },
        {
      "type": "image_picker",
      "id": "image",
      "label": "Thumbnail shot"
     
    },
{
          "type": "richtext",
          "id": "caption",
          "label": "Name details",
"default": "<p>Anna Doe, Product Manager</p>"
        },
        {
          "type": "header",
          "content": "Quote"
        },
        {
          "type": "richtext",
          "id": "quote",
          "label": "Text",
          "default": "<p>Include a favorite customer quote or feedback here.</p>"
        },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top spacing",
      "min": 0,
      "max": 80,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom spacing",
      "min": 0,
      "max": 80,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "animation",
      "label": "Animation",
      "default": "none",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "fadeIn",
          "label": "Fade in"
        },
        {
          "value": "fadeInDown",
          "label": "Fade in down"
        },
        {
          "value": "fadeInLeft",
          "label": "Fade in left"
        },
        {
          "value": "fadeInRight",
          "label": "Fade in right"
        },
        {
          "value": "slideInLeft",
          "label": "Slide in left"
        },
        {
          "value": "slideInRight",
          "label": "Slide in right"
        },
        {
          "value": "zoomIn",
          "label": "Zoom in"
        }
      ]
    }

  
  ]
}

{% endschema %}
