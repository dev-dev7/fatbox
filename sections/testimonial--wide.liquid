{% include 'include-testimonial-wide' %}

{% schema %}

{
  "name": "Testimonials",
  "class": "fat-testimonials testimonials",
  "max_blocks": 3,
  "settings": [
    {
      "type": "checkbox",
      "id": "show_border",
      "label": "Show border",
      "default": true
    },
{
      "type": "image_picker",
      "id": "bg_img",
      "label": "BG Image"
     
    },

    {
      "type": "checkbox",
      "id": "enable_images",
      "label": "Show images",
      "default": true
    },
    {
      "type": "select",
      "id": "crop_shape",
      "label": "Image crop shape",
      "info": "Upload square images for best cropping results",
      "options": [
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "circle",
          "label": "Circle"
        }
      ],
      "default": "circle"
    },
    {
      "type": "select",
      "id": "card_alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "card_text",
      "label": "Quote text",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Quote background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "standard",
      "options": [
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "wide",
          "label": "Wide"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top spacing",
      "min": 0,
      "max": 80,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom spacing",
      "min": 0,
      "max": 80,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "animation",
      "label": "Animation",
      "default": "none",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "fadeIn",
          "label": "Fade in"
        },
        {
          "value": "fadeInDown",
          "label": "Fade in down"
        },
        {
          "value": "fadeInLeft",
          "label": "Fade in left"
        },
        {
          "value": "fadeInRight",
          "label": "Fade in right"
        },
        {
          "value": "slideInLeft",
          "label": "Slide in left"
        },
        {
          "value": "slideInRight",
          "label": "Slide in right"
        },
        {
          "value": "zoomIn",
          "label": "Zoom in"
        }
      ]
    },
    {
      "type": "header",
      "content": "Advanced",
      "info": "[Learn more](https://help.outofthesandbox.com/hc/en-us/articles/360022329373)"
    },
    {
      "type": "text",
      "id": "css_class",
      "label": "CSS Class"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Testimonial",
      "settings": [
 {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
     
    },
        {
      "type": "image_picker",
      "id": "image",
      "label": "Thumbnail shot"
     
    },
{
          "type": "richtext",
          "id": "caption",
          "label": "Name details",
"default": "<p>Anna Doe, Product Manager</p>"
        },
        {
          "type": "header",
          "content": "Quote"
        },
        {
          "type": "richtext",
          "id": "quote",
          "label": "Text",
          "default": "<p>Include a favorite customer quote or feedback here.</p>"
        }
        
      ]
    }
  ],
  "presets": [
    {
      "name": "FatBox Testimonials Wide",
      "category": "Store information",
      "settings": {
          "padding_top": 0,
          "padding_bottom": 20
      },
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}

{% endschema %}
